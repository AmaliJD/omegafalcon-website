---
import * as utils from "../scripts/utils";
const { paths, title, date } = Astro.props;

let css = '';
if (paths.length > 1)
{
    paths.forEach((p: string, index: number) => {
        const pathParts = p.split('\\');
        const title: string = pathParts[pathParts.length - 2];
        const id = (title + '-' + index).replace(' ', '-');
        // console.log(id);
        css += `
        #${id}:checked ~ .photo-card.carosel-body {
            transform: translateX(-${index * 100}%);
        }
            
        `;
    })
}
