<div class="photo-card">
    <img class="first-image" src={paths[0]} alt={title}/>

    <div class="carosel-body">
        {paths.map((p: string) =>
            <img src={p} alt={title} />
        )}
    </div>
    
    <div class="overlay">
        <h3 class="title">{title}</h3>
        <p class="date">{utils.formatDate(date)}</p>
    </div>

    <div class="radio-buttons">
        {paths.length > 1 && paths.map((p: string, index: number) => {
            const pathParts = p.split('\\');
            const title: string = pathParts[pathParts.length - 2];
            const id = (title + '-' + index).replace(' ', '-');
            // console.log(id);
            return(<input type="radio" name={title} id={id}/>)
        })}
    </div>
</div>

<style>
     /* PHOTO CARD */
    .photo-card {
        position: relative;
        overflow: hidden;
        display: flex;
        
        min-width: 150px;
        max-width: 450px;
        height: 200px;


        border-radius: 8px;

        transition: transform 0.3s;
    }

    .first-image {
        visibility: hidden;

        display: flex;
        width: auto;
        height: 100%;

        pointer-events: none;
    }

    .carosel-body {
        position: absolute;
        top: 0;
        left: 0;

        display: flex;

        width: 100%;
        height: 100%;

        object-fit: cover;
        /* overflow-x: scroll; */
        scroll-snap-type: x mandatory;
        transition: transform 0.3s ease;
    }
    
    .carosel-body img {
        flex: 0 0 auto;
        display: flex;
        width: 100%;
        height: 100%;
        
        object-fit: cover;
        scroll-snap-align: center;

        transition: filter 0.3s;
    }

    .photo-card:hover {
        transform: scale(1.05);
    }

    .photo-card:hover img {
        filter: brightness(60%);
    }

    .photo-card:hover .carousel-body {
        
    }

    .overlay {
        position: absolute;
        
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        color: white;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        opacity: 0;
        transition: opacity 0.3s ease;
        text-align: center;
    }

    /* OVERLAY */
    .photo-card:hover .overlay{
        opacity: 1;
    }

    .overlay .title {
        max-width: 100%;
        font-size: 2rem;
        font-weight: bold;
        font-family: sans-serif;
        overflow-wrap: break-word;
        margin-bottom: .25em;
    }

    .overlay .date {
        font-size: 0.9rem;
        font-family: sans-serif;
        margin-top: 0;
        opacity: .85;
    }

    /* RADIO BUTTONS */
    .radio-buttons {
        position: absolute;
        opacity: 0;
        
        top: 80px;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;

        background-color: transparent;
        color: transparent;
        justify-content: center;

        transition: opacity 0.3s ease;
        z-index: 10;
    }

    .photo-card:hover .radio-buttons{
        opacity: 1;
    }
</style>

<style is:raw>
  {css}
</style>
