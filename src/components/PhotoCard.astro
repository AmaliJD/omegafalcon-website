---
import * as utils from "../scripts/utils";
const { path, title, date } = Astro.props;
---

<div class="photo-card">
    <img src={path} alt={title}/>
    <div class="overlay">
        <h3 class="title">{title}</h3>
        <p class="date">{utils.formatDate(date)}</p>
    </div>
</div>

<style>
    .photo-card {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s;
    }
    
    .photo-card img {
        min-width: 200px;
        max-width: 450px;
        width: auto;
        height: 250px;
        object-fit: cover;
        border-radius: 8px;
        transition: filter 0.3s;
    }

    .photo-card:hover {
        transform: scale(1.05);
    }

    .photo-card:hover img {
        filter: brightness(50%);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        text-align: center;
    }

    .overlay:hover {
        opacity: 1;
    }

    .overlay .title {
        max-width: 100%;
        font-size: 2rem;
        font-weight: bold;
        font-family: sans-serif;
        overflow-wrap: break-word;
        margin-bottom: .25em;
    }

    .overlay .date {
        font-size: 0.9rem;
        font-family: sans-serif;
        margin-top: 0;
        opacity: .85;
    }
</style>
