---
import * as utils from "../scripts/utils";
import type { ImageMetadata } from 'astro';
import { Image, Picture } from 'astro:assets';
const { paths, title, date, index } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/artwork/**/*.{jpeg,jpg,png,gif,webp,svg}');

function fixImagePath(path: string) {
    return '/'+path.replaceAll('\\', '/');
}

let css = '';
// css += `.photo-card:hover .carosel-body {left: -100%}`;
if (paths.length > 1)
{
    paths.forEach((p: string, index: number) => {
        const pathParts = p.split('\\');
        const title: string = pathParts[pathParts.length - 2];
        const id = (title + '-' + index).replaceAll(' ', '-');
        // console.log(id);
        css += `
        .photo-card:has(#${id}:checked) .carosel-body {
            left: -${index * 100}%;
        }
            
        `;
    })
}
console.log(css);
